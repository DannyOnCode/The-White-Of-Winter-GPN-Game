            <string>///Enemy Attack
//Developer : Danny Chan
switch (state)
{
    case e_state.idle:
    {
        hsp = 0;
        vsp = 0;
        //Increase range if in boss room
        if(room == rm_levelboss)
        {
            if(distance_to_object(obj_player_move) &lt; 1080) state = e_state.chase; //If within chase range then aggro to player
        }
