    break;
    case e_state.chase:
    {
        //Determine player direction
        dirx = sign(obj_player_move.x - x);
        diry = sign(obj_player_move.y - y);
        //Negative dir = right side animation | Postive dir = left 
        if(dirx &lt; 0)
        {
            image_xscale = 1
        }else{ image_xscale = -1; }     
        
        //Changing of speed of drift enemy
        if(room == rm_levelone)
        {
            hsp = dirx * 1;
            vsp = diry * 1;
        }
        else if(room == rm_levelboss)
        {
            hsp = dirx * 2;
            vsp = diry * 2;
        }
        else
        {
            hsp = dirx * 3;
            vsp = diry * 3;
        }
        x += hsp;
        y += vsp;
        if(distance_to_object(obj_player_move) &gt; 680) state = e_state.idle; //If out of chase range returns to idle
    }
    break;
}






