            <string>///Enemy Attack
//Developer : Danny Chan

switch (state)
{
    case e_state.idle:
    {
        hsp = 0;
        vsp = 0;
        //Checks if enemy is in boss room
        if(room == rm_levelboss)
        {
            //Increase chase range
            if(distance_to_object(obj_player_move) &lt; 1080) state = e_state.chase; //Checks if player is within chase range
        }
        else
        {
            if(distance_to_object(obj_player_move) &lt; 480) state = e_state.chase; //Checks if player is within chase range
        }
    }
    break;
    case e_state.chase:
    {
        //Animation : Dashing
        if(hspeed != 0)
        {
            dir = sign(obj_player_move.x - x);
            //Negative dir = left dash | Postive dir = right dash
            if(dir &lt; 0)
            {
                image_index = 4
            }else{ image_index = 3; }
        }
        //Animation : Charging
        if(charging &amp;&amp; hspeed == 0)
        {
            hsp = 1;
            image_speed = 0.2
            if(image_index == 3)
            {
                image_index = 0;
            }
            y -= hsp
            
        }
        //Make enemy charge for next attack if not attacking
        if(!charging)
        {
            charging = true;    
            alarm[0] = 180; //Dashing towards player
            
        }
    }
    break;
}

